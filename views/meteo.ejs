      </div>
    </div>
    <div class="container">
      <h2>Prévisions jour par jour</h2>
      <div class="flex-row daily">
        <% for (let i = 1; i < 5; i++) { %>
        <div id="day<%= i %>" class="flex-column">
          <div class="day"></div>
          <div class="temp daily-temp flex-row">
            <div class="flex-row">
              <p class="min"></p>
              <sup>°C</sup>
            </div>
            <div class="flex-row">
              <p>/</p>
              <p class="max"></p>
              <sup>°C</sup>
            </div>
          </div>
          <img class="forecastIcon icon" />
          <div class="precipitations flex-row">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              version="1.0"
              width="8.0125pt"
              height="16.0pt"
              viewBox="0 0 641.000000 1280.000000"
              preserveAspectRatio="xMidYMid meet"
            >
