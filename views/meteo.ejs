          <div class="time"></div>
          <div class="temp flex-row">
            <p></p>
            <sup></sup>
          </div>
          <img class="forecastIcon icon" />
          <div class="precipitations flex-row">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              version="1.0"
              width="8.0125pt"
              height="16.0pt"
              viewBox="0 0 641.000000 1280.000000"
              preserveAspectRatio="xMidYMid meet"
